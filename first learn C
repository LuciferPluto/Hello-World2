#include <stdio.h>
#include <float.h>
int main(void)
{
	double d_value=1.0/3.0;
	float f_value=1.0/3.0;
	printf("1.0/3.0 display 6 decimal places.\n"); 
	printf("d_value=%.6f\nf_value=%.6f\n",d_value,f_value);
	printf("1.0/3.0 display 12 decimal places.\n");
	printf("d_value=%.12f\nf_value=%.12f\n",d_value,f_value);
	printf("1.0/3.0 display 16 decimal places.\n");
	printf("d_value=%.16f\nf_value=%.12f\n",d_value,f_value);
	printf("float and double maxium significant digits:\n");
	printf("FLT_DIG=%d,DBL_DIG=%d\n",FLT_DIG,DBL_DIG);
	return 0;
}
